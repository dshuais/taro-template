{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      // TS5090 leading './'
      "@/*": ["./src/*"],
      "~/*": ["./src/*"]
    },
    "types": [
      // "global.d.ts",
      // "../types/response.d.ts"
    ]
  },
  "include": ["./src", "./types", "./config", "./types/response.d.ts"],
  "exclude": ["node_modules", "dist"],
  "compileOnSave": false,
  "files": ["./types/response.d.ts"]
}
